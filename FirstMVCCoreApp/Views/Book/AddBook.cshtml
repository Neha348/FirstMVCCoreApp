@{
    ViewData["Title"] = "Add New Book";
}
@model BookModel
    <div class="container">
        <h3 class="display-4">Add New Book</h3>
        <hr />
        @if (ViewBag.IsSuccess)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Congratulations. You have added the New Book Successfully.<br/>
                Click <a asp-controller="book" asp-action="GetBook" asp-route-id="@ViewBag.Bookid">Here</a> to View the details.</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <form method="post">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="AuthorName"></label>
                <input asp-for="AuthorName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Totalpages"></label>
                <input asp-for="Totalpages" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add Book" class="btn btn-primary" />
            </div>
        </form>
    </div>